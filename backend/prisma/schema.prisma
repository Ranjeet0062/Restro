generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  USER
  CHEAF
  COUNTER
  ADMIN
}
enum Status {
  PAID
  PENDING
  FAILD
}
model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String?  // Optional field: email can be null
  password   String?  // Nullable password (ensure this is intended)
  phonNumber String   // Change type from Number to String
  role Role @default(USER)
  order Order[]
  createdAt  DateTime @default(now())
}
model Order{
  id   Int      @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int  
  items Item[]
  status Status @default(PENDING)
  createdAt  DateTime @default(now())
}
model Item{
  id   Int      @id @default(autoincrement())
  name String
  itemcode String
  itemImage String?
  price String
  orders Order[]
}